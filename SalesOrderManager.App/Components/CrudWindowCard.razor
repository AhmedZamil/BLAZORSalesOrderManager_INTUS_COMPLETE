
<div class="col">
    <div class="card rounded-3 employee-card">
        <div class="card-header py-3">
            <h4>@Window.Name</h4>
        </div>
        <div class="card-body employee-card text-center">
           
            <button class="btn btn-primary btn-sm mb-1"@onclick="@(async () => await WindowQuickViewClicked.InvokeAsync(Window))"> Quick view</button>
            <a href= "@($"windowdetail/{Window.WindowId}")" class="btn btn-outline-primary btn-sm mb-1">
                Full details
            </a>
            <a href="@($"windowedit/{Window.WindowId}")" class="btn btn-outline-primary btn-sm mb-1">
                Edit
            </a>
            <button class="btn btn-primary btn-sm mb-1"@onclick="@(async () => await WindowRemoveClicked.InvokeAsync(Window))"> Remove</button>
        </div>
    </div>
</div>


